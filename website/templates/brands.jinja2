{% extends "layout.jinja2" %}

{% block title %}
  Brands
{% endblock %}

{% block main %}
  <h1 class="display-2"><strong>Brands <i class="bi bi-bag"></i></strong></h1>
  <form action="/brands" method="post" class="row justify-content-center">
    <table class="table table-striped table-dark table-hover table-bordered">
      <thead>
      <tr>
        <th>Brand</th>
        <th>Url</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      {% for brand in brands %}
        <tr>
          <td>{{ brand.name }}</td>
          <td>
            {% if brand.url %}
              <a href="{{ brand.url }}" target="_blank">Website</a>
            {% endif %}
          </td>
          <td></td>
        </tr>
      {% endfor %}
      </tbody>
      <tfoot>
      <tr>
        <td>
          {% call input_control(label="Name") %}
          <input type="text"
                 name="name"
                 required="required"
                 class="form-control form-control-sm"
                 placeholder="Name"
                 autocomplete="off"
          />
          {% endcall %}
        </td>
        <td>
          {% call input_control(label="Url") %}
          <input type="url"
                 name="url"
                 required="required"
                 class="form-control form-control-sm"
                 placeholder="Url"
                 autocomplete="off"
          />
          {% endcall %}
        </td>
        <td class="col-action">
          <button class="btn btn-primary btn-sm" type="submit"><i class="bi bi-plus"></i> Add Brand</button>
        </td>
      </tr>
      </tfoot>
    </table>
  </form>
{% endblock %}